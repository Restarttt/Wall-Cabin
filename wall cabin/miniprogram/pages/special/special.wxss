/* pages/special/special.wxss */
.special {
  padding: 20rpx 30rpx;
}

.big_title {
  text-align: center;
  margin-bottom: 13rpx;
}

/* 照片 */
.main {
  width: 100%;
}

.main_top {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  position: relative;
}

.tag {
  text-align: center;
  position: absolute;
  right: 0;
}

.tag image {
  width: 25rpx;
  height: 25rpx;
  position: relative;
  top: 3rpx;
  margin-left: 20rpx;

}

swiper {
  width: 100%;
  height: 241px;
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(0);


}

.swiper-item {
  width: 31.333%;
  height: 385rpx;
  margin-bottom: 20rpx;
}

.one {
  width: 100%;
  height: 100%;
}

.one image {
  width: 100%;
  border-radius: 8rpx;
}

/* end */
.end{
  margin-top: 50rpx;
}
.name{
  position: relative;
}
.line{
  width: 100%;
  height: 2rpx;
  background-color: #F5F5F5;

}
.title{
  color: #666;
  position: absolute;
  top: -18rpx;
  left: 30%;
  background-color: #fff;
  width: 40%;
  text-align: center;
  font-size: 25rpx; 
}