/* pages/detail/detail.wxss */
.detail {
  width: 100%;
  height: 100%;
  position: relative;
}

.big {
  width: 100%;
  height: 100%;

}

.big image {
  width: 100vw;
  height: 100vh;
}

/*  时间信息*/
.time {
  position: absolute;
  left: 28%;
  top: 6%;
}

.time_t {
  display: flex;
  align-items: center;
  font-size: 120rpx;
  color: #fff;
  font-weight: 500;
}

.number {
  padding: 0 10rpx;
  height: 180rpx;
}

.time_b {
  font-size: 38rpx;
  color: #fff;
  display: flex;
  font-weight: 300;
  justify-content: center;

}

.date {
  margin-right: 10rpx;
}

/* 底部 */
.share {
  border: 0;
  padding: 0;
  margin: 0;
}

.download {
  width: 100%;
  position: fixed;
  bottom: -1rpx;
  background: rgba(0, 0, 0, 0.3);
  height: 130rpx;
}

.name {
  color: #fff;
  font-size: 25rpx;

}

.down_name {
  color: #fff;
  font-size: 23rpx;
  margin-top: 58rpx;

}

.title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 60rpx;
}

/* X小图标 */
.icon image {
  width: 40rpx;
  height: 40rpx;
}

.home {
  position: relative;
}

.down_icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  border-radius: 50%;
  top: -62rpx;
  left: -28rpx;
}

image.down {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 12rpx;
  top: 11rpx;
}