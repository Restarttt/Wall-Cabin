
/* pages/detail/detail.wxss */

.detail {
  width: 100%;
  height: 100%;
  position: relative;
}

.big {
  width: 100%;
  height: 100%;

}

.big image {
  width: 100vw;
  height: 100vh;
}

/*  时间信息*/
.time {
  position: absolute;
  left: 28%;
  top: 6%;
}

.time_t {
  display: flex;
  align-items: center;
  font-size: 120rpx;
  color: #fff;
  font-weight: 500;
}

.number {
  height: 30rpx;
  line-height: 10rpx;
  padding: 0 10rpx;
}

.time_b {
  font-size: 38rpx;
  color: #fff;
  display: flex;
  font-weight: 300;
  justify-content: center;

}

.date {
  margin-right: 10rpx;
}

/* 底部 */
.share {
  border: 0;
  padding: 0;
  margin: 0;
}

.download {
  width: 100%;
  position: fixed;
  bottom: -1rpx;
  background: rgba(0, 0, 0, 0.3);
  height: 130rpx;
}

.name {
  color: #fff;
  font-size: 25rpx;
  font-weight: 400;
}

.down_name {
  color: #fff;
  font-size: 25rpx;
  margin-top: 58rpx;

}

.title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 60rpx;
}

/* X小图标 */
.icon image {
  width: 40rpx;
  height: 40rpx;
}

.home {
  position: relative;
}

.down_icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  border-radius: 50%;
  top: -62rpx;
  left: -28rpx;
}

image.down {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 11rpx;
  top: 11rpx;
}
/* 作者信息 */
.source{
  padding: 20rpx  20rpx  50rpx ;
  border-bottom: 2rpx solid #cdcdcd;

}
.img_source{
  color: #cdcdcd;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  
}
.author_info{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;

}

.author image{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;

}
.author_title{
  color: #000;
  display: inline-block;
}
.report image{
  width: 40rpx;
  height: 40rpx;
  margin-right:10rpx;
  vertical-align: middle;

}
.report_title{
  color: #cdcdcd;
  font-size: 28rpx;
  display: inline-block;
}
.tag{
  display: flex;
}
.tag_title{
  border: 2rpx solid #d81e06;
  padding: 4rpx 25rpx;
  margin-right: 20rpx;
  color: #d81e06;
  font-size: 22rpx;
  border-radius: 50rpx;
}