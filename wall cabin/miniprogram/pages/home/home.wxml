<!--home.wxml-->
<view class="home">
	<!-- 头像部分 -->
	<view class="head">
		<view class="photo">
			<image src="{{userImg}}" />
			<view class="user_name">{{userName}}</view>
		</view>
		<button class="login_btn" open-type="getUserInfo" bindgetuserinfo="onGotUserInfo">登录</button>

	</view>
	<!-- 作者部分 -->
	<view class="service">
		<view class="serve">
			<view wx:for="{{serve}}" wx:key="index" class="list">
				<navigator url="{{item.url}}" hover-class="navigator-hover">
					<view class="list_btn">
						<view class="frist" wx:if="{{item.type === 0}}">
							{{item.name}}
						</view>
						<button open-type="contact" wx:if="{{item.type === 1}}">
							<view class="skip">
								{{item.name}}
							</view>
							<view class="icon">
								<image src="{{item.img}}" />
							</view>
						</button>
						<view class="icon" wx:if="{{item.type === 0}}">
							<image src="{{item.img}}" />
						</view>
					</view>
				</navigator>
			</view>
		</view>
	</view>
</view>