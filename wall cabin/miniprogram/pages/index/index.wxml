<!--index.wxml-->
<view class="find">
	<view class="top-pic">
		<!-- 顶部的循环播放图片 -->
		<swiper autoplay="{{autoplay}}" indicator-color="{{indicatorColor}}" duration="{{duration}}" indicator-dots="{{indicatorDots}}" indicator-active-color="{{indicatorActiveColor}}" circular="{{circular}}" interval="{{interval}}">
			<swiper-item wx:for="{{list}}" wx:key="index">
				<view class="logo">
					<image src="{{item}}" mode="{{mode}}" />
				</view>
			</swiper-item>
		</swiper>
	</view>
	<!-- 小图标 -->
	<view class="icon">
		<view class="icon_list">
			<view wx:for="{{icon_list}}" wx:key="index" class="list">
				<view class="single">
					<view class="single_img">
						<image src="{{item.img}}" />
					</view>
					<view class="single_title">{{item.text}}</view>
				</view>
			</view>
		</view>
	</view>
	<!-- 风景模块 -->
	<view class="scenery">
		<view class="scenery_top">
			<view class="back">
				<image src="{{scenery_data.back}}" />
				<view>more</view>
			</view>
			<view class="tag">
				<view>风景</view>
				<image src="{{scenery_data.dot}}" />
			</view>
		</view>
		<view class="scenety_bottom">
			<view class="scenety_list" wx:for="{{scenery_data.list}} " wx:key="index" >
				<image src=" {{item}}" />
		</view>
	</view>
</view>
</view>