/**index.wxss**/
.hover_class {
  background: #fff;
}

/* top大图 */
.top-pic {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

swiper {
  height: 400rpx
}

swiper-item {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

.logo {
  height: 100%;
}

.logo image {
  width: 100%;
  display: block;
  height: 100%;
  border-radius: 20rpx;
  margin: 0 auto;
  box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
}

/*icon小图标 */
.icon {
  width: 100%;
  padding: 35rpx 0;

}

.icon_list {
  width: 90%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  margin: 0 auto;

}

.list {
  width: 21%;
  /* height: 100rpx; */
  margin-bottom: 30rpx;
}

.single {
  width: 50%;
  height: 100%;
  text-align: center;
  margin: 0 auto;

}

.single_img image {
  width: 100%;
  height: 75rpx;
}

.single_title {
  font-size: 26rpx;
  color: #666;
}

/* 风景 */
.scenery {
  padding: 20rpx 30rpx;
}

.scenery_top {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.back {
  width: 20%;
  color: #99CCFF;
}

.back image {
  width: 40rpx;
  height: 50rpx;
  vertical-align: middle;
}

.tag {
  width: 20%;
  text-align: center;
}

.tag image {
  width: 25rpx;
  height: 25rpx;
  position: relative;
  top: 3rpx;
  margin-left: 20rpx;
}

text {
  display: inline-block;
}

.scenety_bottom {
  margin-top: 15rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* justify-content: flex-end; */
}

.scenety_list {
  width: 31.333%;
  height: 385rpx;
  margin-bottom: 20rpx;
}

.scenety_list image {
  width: 100% ;
  height: 100%;
  border-radius: 8rpx;
}